    <record id="library_student_search" model="ir.ui.view">
        <field name="name">library.students.search</field>
        <field name="model">library.students</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>
                <field name="contact"/>
                <field name="email"/>
                <field name="book_id"/>
                <filter string="Name" name="grp_name" context="{'group_by':'name'}"/>
                <filter string="Contact" name="g_co" context="{'group_by':'contact'}"/>
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <searchpanel>
                    <field name="gender" icon="fa-user-o"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <menuitem id="library_student_root" action="library_student_action"
              name="Student" parent="library1_book1"
              sequence="1"/>
    0
</odoo>