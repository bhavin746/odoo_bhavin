<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="library_student_action" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.students</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{"active_test":False}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Student Record
            </p>
        </field>
    </record>

    <record id="library_student_form" model="ir.ui.view">
        <field name="name">library.students.form</field>
        <field name="model">library.students</field>
        <field name="arch" type="xml">
            <form string="Student Form">
                <button name="view_book" string="View Interested Book" type="object"/>
                <button name="update_book" string="Update Interested Book" type="object"/>
                <button name="remove_book" string="Remove Interested Book" type="object"/>
                <button name="add_book" string="Add Interested Book" type="object"/>
                <button name="removeall_book" string="All Remove Interested Book" type="object"/>
                <button name="replaceall_book" string="All Replace Interested Book" type="object"/>
                <!--                <button name="wiz_open" string="Wizard open using custom method"-->
                <!--                        type="object"/>-->
                <!--                <button name="british_library.student_update_action" string="Wizard open using action" type="action"/>-->
                <sheet>
                    <!--                    <div class="oe_title">-->
                    <!--                        <h1 class="d-flex">-->
                    <!--                            <field name="name"/>-->
                    <!--                        </h1>-->
                    <!--                    </div>-->
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="active"/>
                            <field name="gender"/>
                            <field name="book_id"/>
                            <field name="address"/>
                        </group>

                        <group>
                            <field name="blood_group"/>
                            <field name="contact" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="book_ids" widget="many2many_tags"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Books" name="Books">
                            <separator string="Interested Book"/>
<!--                            <field name="book_ids" widget="many2many_tags"/>-->
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <record id="library_student_tree" model="ir.ui.view">
        <field name="name">library.students.tree</field>
        <field name="model">library.students</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender" optional="show"/>
                <field name="address" optional="show"/>
                <field name="blood_group"/>
                <field name="contact" optional="hide"/>
                <field name="email" optional="hide"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="library_students_kanban">
        <field name="name">library.students.kanban</field>
        <field name="model">library.students</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="blood_group"/>
                <field name="contact"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">

                            <div col="4">
                                <div>
                                    <b>
                                        <field name="name"/>
                                    </b>
                                </div>
                                <div name="library_age" class="mt-1">
                                    Age:
                                    <field name="age"/>
                                </div>
                                <div name="library_gender" class="mt-1">
                                    Gender:
                                    <field name="gender"/>
                                </div>
                                <div name="library_blood_group" class="mt-1">
                                    Blood Group:
                                    <field name="blood_group"/>
                                </div>
                                <div name="library_contact" class="mt-1">
                                    Contact:
                                    <field name="contact"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

