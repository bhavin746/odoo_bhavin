<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.books</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                All type of books available in our library management system.
            </p>
        </field>
    </record>

    <record id="library_book_form" model="ir.ui.view">
        <field name="name">library.books.form</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="title_id"/>
                            <field name="price"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

       <record model="ir.ui.view" id="library_books_kanban">
        <field name="name">library.books.kanban</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="title_id"/>
                <field name="price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div col="4">
                                <div>
                                    <b>
                                        <field name="title_id"/>
                                    </b>
                                </div>
                                <div name="library_price" class="mt-1">
                                    Price:
                                    <field name="price"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="library_book_tree" model="ir.ui.view">
        <field name="name">library.books.tree</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <tree>
                <field name="title_id"/>
                <field name="price"/>
            </tree>
        </field>
    </record>



    <record id="library_book_search" model="ir.ui.view">
        <field name="name">library.books.search</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <search>
                <field name="title_id"/>
                <field name="price"/>
            </search>
        </field>
    </record>


    <menuitem id="library_book_root"
              name="Library"
              sequence="10"/>
    <menuitem id="library1_book1" name="Library"
              parent="library_book_root"
              sequence="11"/>
    <menuitem id="library2_book2" name="Book" action="library_book_action"
              parent="library1_book1"
              sequence="12"/>

</odoo>