<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="menu_library_form1" model="website.menu">
        <field name="name">Create Student</field>
        <field name="url">/student_webfrom</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">55</field>
    </record>

        <template id="create_students" name="Create Student">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/webstudent" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label for="name" class="control-label">Name</label>
                                <input type="text" name="name" t-att-value="name" id="name"
                                       class="form-control" placeholder="Bhavin" required="required"/>
                            </div>
                            <div class="form-group">
                            <label for="email" class="control-label">Email</label>
                                <input type="email" name="email" t-att-value="email" id="email"
                                       class="form-control" required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="book_id" class="control-label">Books</label>
                                <select name="book_id" class="form-control link-style">
                                    <t t-foreach="book1_rec" t-as="book">
                                        <option t-esc="book.interest_book" t-att-value="book.id"/>
                                    </t>
                                </select>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary pull-left">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="student_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/student-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">british_library.student_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="british_library.student_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        The student has been Created successfully
                                    </div>
                                    <p>
                                        We will get back to shortly
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>