<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="create_book_form" model="ir.ui.view">
        <field name="name">create.book.wizard</field>
        <field name="model">create.book</field>
        <field name="arch" type="xml">
            <form string="Create Book">
               <group>
                   <field name="title_id"/>
                   <field name="gender"/>
               </group>
                <footer>
                    <button name="create_book" string="Create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_book_wizard" model="ir.actions.act_window">
        <field name="name">Create Book</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.book</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_book_form"/>
        <field name="target">new</field>
    </record>
</odoo>