<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="student_update_form_view_wiz" model="ir.ui.view">
        <field name="name">student.update.form.view.wiz</field>
        <field name="model">student.update.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="student"/>
                    </group>
                </group>

                <footer>
                    <button string="Update Student" type="object" name="update_student"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="student_update_action" model="ir.actions.act_window">
        <field name="name">Student Update</field>
        <field name="res_model">student.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="student_update_action_window" model="ir.actions.act_window">
        <field name="name">Student Update</field>
        <field name="res_model">student.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_update_form_view_wiz"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_library_students"/>
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>